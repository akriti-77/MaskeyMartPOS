@{
    ViewData["Title"] = "Checkout";
}

<h2>Receipt</h2>

<table class="table">
    <tr>
        <th>Name</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Total</th>
    </tr>
    @foreach (var item in ViewBag.Transaction.Items)
    {
        <tr>
            <td>@item.Product.Name</td>
            <td>@item.Quantity</td>
            <td>$@item.Product.Price.ToString("F2")</td>
            <td>$@((item.Product.Price * item.Quantity).ToString("F2"))</td>
        </tr>
    }
</table>

<p>Subtotal: $@ViewBag.Transaction.Subtotal.ToString("F2")</p>
<p>Tax: $@ViewBag.Transaction.Tax.ToString("F2")</p>
<p>Total: $@ViewBag.Transaction.Total.ToString("F2")</p>
<p>Cash Amount: $@ViewBag.CashAmount.ToString("F2")</p>
<p>Change: $@ViewBag.Change.ToString("F2")</p>

<a asp-action="POSInterface" class="btn btn-primary">New Transaction</a>
<button onclick="printReceipt()" class="btn btn-secondary">Print Receipt</button>

<script>
    function printReceipt() {
        window.print();
    }
</script>

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f1f5f9;
        color: #0a192f;
        margin: 0;
        padding: 40px 20px;
    }

    h2 {
        text-align: center;
        font-size: 36px;
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 40px;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        background-color: #ffffff;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
    }

        .table th {
            background-color: #0a192f;
            color: #e0f2f1;
            padding: 16px;
            font-size: 16px;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .table td {
            padding: 14px;
            text-align: center;
            font-size: 15px;
            border-bottom: 1px solid #eaeaea;
        }

        .table tr:last-child td {
            border-bottom: none;
        }

    p {
        font-size: 17px;
        font-weight: 500;
        text-align: right;
        margin: 12px 0;
        color: #333;
    }

    .btn {
        display: inline-block;
        padding: 12px 20px;
        font-size: 15px;
        border-radius: 6px;
        text-decoration: none;
        cursor: pointer;
        border: none;
        transition: all 0.3s ease;
        margin-right: 10px;
    }

    .btn-primary {
        background-color: #007bff;
        color: white;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

    .actions {
        margin-top: 30px;
        text-align: center;
    }

    /* Print styling */
        @@media print {
        body

    {
        background-color: white;
        padding: 0;
    }

    .btn,
    .actions,
    h2 {
        display: none;
    }

    .table {
        box-shadow: none;
        border: none;
    }

    p {
        text-align: left;
        font-size: 14px;
    }

    }
</style>
