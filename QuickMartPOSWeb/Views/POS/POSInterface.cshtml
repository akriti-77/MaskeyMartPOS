@await Html.PartialAsync("~/Views/Shared/Style.cshtml")

@{
    ViewData["Title"] = "MaskeyMart POS";
    var date = ViewBag.DateTime.ToString("MMMM dd, yyyy");
    var time = ViewBag.DateTime.ToString("hh:mm:ss tt");
}

<div class="header">
    <div class="logo">
        <img src="@Url.Content("~/images/logo.jpeg")" alt="Maskey Grocery Mart Logo" class="logo-icon" />
    </div>

    <div class="store-info">
        <h1>Maskey Grocery Mart</h1>
        <p>Lalitpur, Nepal</p>
        <p>Phone: 048540733</p>
    </div>

    <div class="user-info">
        <div class="info-row"><span class="label">Date:</span> <span>@date</span></div>
        <div class="info-row"><span class="label">Time:</span> <span id="currentTime">@time</span></div>
        <div class="info-row"><span class="label">User:</span> <span>@ViewBag.UserName</span></div>
    </div>
</div>

<div class="categories">
    <div class="category" data-category="All">All</div>
    @foreach (var category in ViewBag.Categories)
    {
        <div class="category" data-category="@category">@category</div>
    }
</div>

<div class="table-container">
    <table id="product-table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in ViewBag.Inventory)
            {
                <tr data-category="@product.Category">
                    <td>@product.Name</td>
                    <td>$@product.Price.ToString("F2")</td>
                    <td>
                        <input type="number" value="1" min="1" id="qty-@product.Id" style="width: 60px;" />
                    </td>
                    <td>
                        <button onclick="addToCart(@product.Id)" class="btn-add-cart">Add to Cart</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="cart">
    <h3>🛒 Cart Items:</h3>
    <div class="table-container">
        <table id="cart-items">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.CurrentTransaction.Items)
                {
                    <tr>
                        <td>@item.Product.Name</td>
                        <td>@item.Quantity</td>
                        <td>$@item.Product.Price.ToString("F2")</td>
                        <td>$@((item.Product.Price * item.Quantity).ToString("F2"))</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="totals">
    <div class="totals-row">
        <span class="label">Subtotal:</span>
        <span class="value">$<span id="subtotal">@ViewBag.CurrentTransaction.Subtotal.ToString("F2")</span></span>
    </div>
    <div class="totals-row">
        <span class="label">Tax (8%):</span>
        <span class="value">$<span id="tax">@ViewBag.CurrentTransaction.Tax.ToString("F2")</span></span>
    </div>
    <div class="totals-row total-highlight">
        <span class="label">Total Amount:</span>
        <span class="value">$<span id="total">@ViewBag.CurrentTransaction.Total.ToString("F2")</span></span>
    </div>
</div>


<form asp-action="Checkout" method="post">
    <div class="right-align-form">
        <div class="form-group cash-input">
            <label for="cashAmount">Cash Amount:</label>
            <input type="number" name="cashAmount" min="0" required />
        </div>
        <button type="submit" class="btn btn-success"> 🛒 Checkout</button>
    </div>
</form>

<div class="actions">
    <button onclick="clearCart()" class="btn btn-danger">
        🗑️ Clear Cart
    </button>
    <a href="/POS/AddProduct" class="btn btn-primary">
        ➕ Add New Product
    </a>
</div>

@section Scripts {
    <script src="~/js/pos.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const categories = document.querySelectorAll('.category');
            const productRows = document.querySelectorAll('#product-table tbody tr');

            categories.forEach(category => {
                category.addEventListener('click', function () {
                    const selectedCategory = this.getAttribute('data-category');
                    productRows.forEach(row => {
                        const rowCategory = row.getAttribute('data-category');
                        row.style.display = (selectedCategory === 'All' || rowCategory === selectedCategory) ? '' : 'none';
                    });
                });
            });
        });
    </script>
    <script>
                 function updateTime() {
            const now = new Date();

            let hours = now.getHours();
            let minutes = now.getMinutes();
            let seconds = now.getSeconds();

            
            let ampm = '';
            if (hours >= 12) {
                ampm = ' PM';
                if (hours > 12) hours -= 12;
            } else {
                ampm = ' AM';
                if (hours === 0) hours = 12;
            }

            minutes = minutes < 10 ? '0' + minutes : minutes;
            seconds = seconds < 10 ? '0' + seconds : seconds;

            const timeString = hours + ':' + minutes + ':' + seconds + ampm;

            document.getElementById('currentTime').textContent = timeString;
        }

        updateTime();

        setInterval(updateTime, 1000);
    </script>

}
